<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
                <% if current_user %>
            <%= form_for [@product, @review] do |f| %>
            <dt>Rating</dt>
            <dd><%= f.select(:rating, options_for_select([['Great', 5], ['Good', 4], ['Satisfactory', 3],['Not so good', 2],['Terrible', 1]])) %></dd>
            <dt>Description</dt>
            <dd><div><%= f.text_field :description, class: 'form-control' %></div> <%= f.submit 'Create Review', class: 'btn btn-primary form-control' %></dd>
            <% end %>
            <% end %>
   </dl>
      </div>
            <div class="col-sm-8">
        <dl class="dl-horizontal">
            <% @product.reviews.reverse_each do |review| %>
              <%= render 'review', review: review %>
     
      <% end %>
    </div>

  </article>

</section>

